@model TaskToDo_WebApp.Models.ToDoTask

@{
    ViewData["Title"] = "Delete Task";
}

<div class="row justify-content-center">
    <div class="col-xl-6 col-lg-8 col-md-8 col-sm-10">
        <label class="form-label">Are you sure you want to delete this task ?</label>
        <dl class="row">
            <dt class="col-sm-8">
                @Html.DisplayFor(model => model.Name)
            </dt>
        </dl>
    
        <form asp-action="Delete">
            <input type="hidden" asp-for="TaskId" />
            <input type="submit" value="Delete" class="btn btn-danger" />
        </form>
    </div>

    <div class="row justify-content-center">
        <div class="col-xl-6 col-lg-8 col-md-8 col-sm-10 mt-3 mb-5" style="padding-left: 6px">
            <a asp-action="Index">Back to List</a>
        </div> 
    </div>
</div>