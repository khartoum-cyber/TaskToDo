@{
    ViewData["Title"] = "Update Task";
}

@model TaskToDo_WebApp.Models.ViewModel.ToDoTaskVM

<div class="row justify-content-center">
    <div class="col-xl-6 col-lg-8 col-md-8 col-sm-10">
        <table class="table">
            <thead>
            <tr class="table-primary">
                <th scope="row">Update Task</th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <form method="post">
                    <td class="buttons-column">
                        <input asp-for="ToDoTask.Name" class="form-control"/>
                    </td>
                    <td class="buttons-column">
                        <button type="submit" class="btn btn-primary">Update</button>
                    </td>
                </form>

                <td class="buttons-column">
                    <a asp-action="Index" class="btn btn-secondary">Back</a>
                </td>
            </tr>
            </tbody>
        </table>

    </div>
</div>